SHELL =		@SHELL@
INSTALL =	@INSTALL@
@SET_MAKE@

ASCIIDOC =	@ASCIIDOC@

SMLNJ_VERSION =	@PACKAGE_VERSION@
RELEASE_DATA =	@RELEASE_DATE@

OUT_DIR =	@OUT_DIR@

ATTRS =		--attribute="version=$(SMLNJ_VERSION)" \
		--attribute=source-highlighter=pygments

TXT_FILES =	HISTORY.txt

HTML =		$(TXT_FILES:.txt=.html)

.PHONEY:	html
html:		$(HTML)

%.html : %.txt
	$(ASCIIDOC) $(ATTRS) $(CONF) -b html5 $<

#################### Cleanup ####################

CLEAN_SUBDIRS =

CLEAN_FILES =

DISTCLEAN_FILES +=	Makefile \
			$(HTML)

include @ROOT_DIR@/mk/clean-rules.gmk
